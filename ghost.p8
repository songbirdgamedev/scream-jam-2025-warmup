--collision

function check_collision(light)
	local x = player.x + player.r
	local y = player.y + player.r
	diff_x = (x - light.x) ^ 2
	diff_y = (y - light.y) ^ 2
	dist_sq = diff_x + diff_y

	if dist_sq < light.r ^ 2 then
		_init()
	end
end


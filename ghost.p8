--player

function init_player()
	player = {
		x = 60,
		y = 60,
		r = 4,
		sprite = 1,
		size = 1,
		flip = false
	}
end

function update_player()
	--movement
	if btn(⬅️) then
		player.x -= 1
		player.flip = false
	end
	if btn(➡️) then
		player.x += 1
		player.flip = true
	end
	if btn(⬆️) then
		player.y -= 1
	end
	if btn(⬇️) then
		player.y += 1
	end

	--check boundary
	if player.x < 0 then
		player.x = 0
	elseif player.x > 120 then
		player.x = 120
	elseif player.y < 0 then
		player.y = 0
	elseif player.y > 120 then
		player.y = 120
	end
end

function draw_player()
	spr(
		player.sprite,
		player.x,
		player.y,
		player.size,
		player.size,
		player.flip
	)
end


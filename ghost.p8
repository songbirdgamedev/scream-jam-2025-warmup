--player

function init_player()
	player = {
		x = 60,
		y = 60,
		sprite = 1,
		size = 1,
		flip = false
	}
end

function update_player()
	--movement
	if btn(⬅️) then
		player.x -= 1
		player.flip = false
	end
	if btn(➡️) then
		player.x += 1
		player.flip = true
	end
	if btn(⬆️) then
		player.y -= 1
	end
	if btn(⬇️) then
		player.y += 1
	end
end

function draw_player()
	spr(
		player.sprite,
		player.x,
		player.y,
		player.size,
		player.size,
		player.flip
	)
end

